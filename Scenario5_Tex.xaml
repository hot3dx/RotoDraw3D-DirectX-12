<Page
    x:Class="Hot3dxRotoDraw.Scenario5_Tex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hot3dxRotoDraw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,0,0" Height="950" Width="500">


    <GridView VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid x:Name="RootGrid" Margin="0,0,0,-49" CanBeScrollAnchor="True" Height="950" Width="500" HorizontalAlignment="Center" Background="LightGreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="700"/>

            </Grid.RowDefinitions>


            <TextBox x:Name="IDC_PALETTE_FILE_NAME_EDIT" HorizontalAlignment="Left" Margin="1,5,0,0" Text="Palette FileName" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="115" FontSize="9" Grid.Row="0"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="118,5,0,0" Text="Sample Edit Filename Box" VerticalAlignment="Top" Width="310" Height="25" FontSize="9" Grid.Row="0"/>
            <TextBlock x:Name="textureFileTextBlock1" HorizontalAlignment="Left" Margin="10,5,0,0" Text="File Path 1" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1"/>
            <TextBlock x:Name="textureFileTextBlock2" HorizontalAlignment="Left" Margin="10,20,0,0" Text="File Path 2" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1"/>
            <TextBlock x:Name="textureFileTextBlock3" HorizontalAlignment="Left" Margin="10,35,0,0" Text="File Path 3" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1"/>
            <TextBlock x:Name="textureFileTextBlock4" HorizontalAlignment="Left" Margin="10,50,0,0" Text="File Path 4" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" />
            <TextBlock x:Name="textureFileTextBlock5" HorizontalAlignment="Left" Margin="10,65,0,0" Text="File Path 5" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" />
            <TextBlock x:Name="textureFileTextBlock6" HorizontalAlignment="Left" Margin="10,80,0,0" Text="File Path 6" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366"  Grid.Row="1"/>
            <TextBlock x:Name="textureFilePicTextBlock1" HorizontalAlignment="Left" Margin="10,95,0,0" Text="File Path Pic" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1"/>
            <TextBlock x:Name="textureFileVideoTextBlock2" HorizontalAlignment="Left" Margin="10,110,0,0" Text="File Path Video" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="475" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1"/>
            <StackPanel x:Name="texPanel1" HorizontalAlignment="Left"  Margin="10,10,0,0" Height="605" Width="225" Grid.Row="2" VerticalAlignment="Top">
                <TextBlock x:Name="filePath1TextBlock" HorizontalAlignment="Left" Margin="1,5,0,0" Text="FilePath:1" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePath1TextBlock_SelectionChanged"/>
                <Image x:Name="TextureImage1" Source="ms-appx:///Assets/Textures/fire.dds"  x:Load="True" Loaded="TextureImage1_Loaded" HorizontalAlignment="Left" Height="75" Margin="10,13,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureImage1_Tapped" RightTapped="TextureImage1_RightTapped"/>
                <TextBlock x:Name="filePath2TextBlock" HorizontalAlignment="Left" Margin="120,-100,0,0" Text="FilePath:2" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePath2TextBlock_SelectionChanged"/>
                <Image x:Name="TextureImage2" Source="ms-appx:///Assets/Textures/sphere.png"   x:Load="True" Loaded="TextureImage2_Loaded" HorizontalAlignment="Left" Height="75" Margin="120,-75,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureImage2_Tapped" RightTapped="TextureImage2_RightTapped"/>
                <TextBlock x:Name="ImageTextBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Basic/Dual Effect Texture | Dual Effect Texture" TextWrapping="Wrap" Height="14" Width="226" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="2"/>
                <TextBlock x:Name="filePath3TextBlock" HorizontalAlignment="Left" Margin="1,5,0,0" Text="FilePath:3" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePath3TextBlock_SelectionChanged"/>
                <Image x:Name="TextureRMAImage3" Source="ms-appx:///Assets/Textures/Toyrobot_RMA.DDS"  x:Load="True" Loaded="TextureImage3_Loaded" HorizontalAlignment="Left" Height="75" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureRMAImage3_Tapped" RightTapped="TextureRMAImage3_RightTapped"/>
                <TextBlock x:Name="filePath4TextBlock" HorizontalAlignment="Left" Margin="120,-100,0,0" Text="FilePath:4" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePath4TextBlock_SelectionChanged" />
                <Image x:Name="TextureEMMisiveImage4" Source="ms-appx:///Assets/Textures/Toyrobot_Normal.DDS"  x:Load="True" Loaded="TextureImage4_Loaded" HorizontalAlignment="Left" Height="75" Margin="120,-75,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureEMMisiveImage4_Tapped" RightTapped="TextureNormalImage4_RightTapped"/>
                <TextBlock x:Name="ImageTextBlock2" HorizontalAlignment="Left" Margin="10,10,0,0" Text="RMA/EMM PBR Texture | Normal PBR Effect Texture" TextWrapping="Wrap" Height="14" Width="222" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="2"/>
                <TextBlock x:Name="filePath5TextBlock" HorizontalAlignment="Left" Margin="1,5,0,0" Text="FilePath:5" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366"  Grid.Row="1" SelectionChanged="filePath5TextBlock_SelectionChanged"/>
                <Image x:Name="TextureRadianceImage5" Source="ms-appx:///Assets/Textures/ATRIUM_R.DDS"   x:Load="True" Loaded="TextureImage5_Loaded" HorizontalAlignment="Left" Height="75" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureRadianceImage5_Tapped" RightTapped="TextureRadianceImage5_RightTapped"/>
                <TextBlock x:Name="filePath6TextBlock" HorizontalAlignment="Left" Margin="120,-100,0,0" Text="FilePath:6" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366"  Grid.Row="1" SelectionChanged="filePath6TextBlock_SelectionChanged"/>
                <Image x:Name="TextureIrradianceImage6" Source="ms-appx:///Assets/Textures/ATRIUM_IR.DDS"   x:Load="True" Loaded="TextureImage6_Loaded" HorizontalAlignment="Left" Height="75" Margin="120,-75,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="TextureIrradianceImage6_Tapped" RightTapped="TextureIrradianceImage6_RightTapped"/>
                <TextBlock x:Name="ImageTextBlock3" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Radiance PBR Texture | Irradiance PBR Effect Texture" TextWrapping="Wrap" Height="19" Width="232" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="2"/>
                <TextBlock x:Name="filePathPic1TextBlock" HorizontalAlignment="Left" Margin="1,5,0,0" Text="FilePath:GridPic" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePathPic1TextBlock_SelectionChanged"/>
                <Image x:Name="PicTextureImage2" Source="ms-appx:///Assets/Textures/tree01S.dds"  x:Load="True" Loaded="PicTextureImage2_Loaded" HorizontalAlignment="Left" Height="75" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Tapped="PicTextureImage2_Tapped" RightTapped="PicTextureImage2_RightTapped"  FocusVisualPrimaryBrush="#FF18ED18" FocusVisualSecondaryBrush="#FFBCF5BC"/>
                <TextBlock x:Name="filePathVideo2TextBlock" HorizontalAlignment="Left" Margin="120,-100,0,0" Text="FilePath:Video" VerticalAlignment="Top" Height="14" Width="80" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="1" SelectionChanged="filePathVideo2TextBlock_SelectionChanged"/>
                <Image x:Name="VideoTextureImage2" Source="ms-appx::///Assets/Textures/Thumbnail/SampleVideo.mp4"  x:Load="True" Loaded="VideoTextureImage2_Loaded" HorizontalAlignment="Left" Height="75" Margin="120,-75,0,0" VerticalAlignment="Top" Width="75"  Grid.Row="2" Tapped="VideoTextureImage2_Tapped" RightTapped="VideoTextureImage2_RightTapped"  FocusVisualPrimaryBrush="#FF18ED18" FocusVisualSecondaryBrush="#FFBCF5BC"/>
                <TextBlock x:Name="ImageTextBlock4" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Background Texture | Video Effect Texture MP4" TextWrapping="Wrap" Height="14" Width="219" FontSize="9" FocusVisualPrimaryBrush="#FF66B366" Grid.Row="2"/>
                <CheckBox x:Name="IDC_PIC_CHECKBOX" Content="Background shows&#xD;&#xA; Picture if Checked" Margin="10,5,0,0" Grid.Row="2" VerticalAlignment="Top" Click="IDC_PIC_CHECKBOX_Checked"  BorderBrush="#FF266B26"  Background="#FFF1F30B" ToolTipService.ToolTip="Shows a background Photo that can be used as a template" FontSize="10" />
                <Button x:Name="IDC_SHOW_BKGRND_BUTTON" Content="Show Back&#xD;&#xA; ground pic" Margin="135,-30,0,0" Grid.Row="2" VerticalAlignment="Top" Click="IDC_SHOW_BKGRND_BUTTON_Click"  FontSize="10"/>
                <CheckBox x:Name="IDC_GRID_OR_PIC_CHECKBOX" Content="Grid Shows&#xD;&#xA; if Checked" Margin="10,5,0,0" Grid.Row="2" VerticalAlignment="Top" Click="IDC_GRID_OR_PIC_CHECKBOX_Checked" FontSize="10"  BorderBrush="#FF266B26" Background="#FFF1F30B" ToolTipService.ToolTip="Shows or Hides Drawing Grid"/>
            </StackPanel>
            <StackPanel x:Name="texPanel2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,10,0,0"  Height="450" Width="200" Grid.Row="2">
                <Button x:Name="IDC_CREATE_PALETTE_BUTTON" Content="Create Palette" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.645,0.438" Width="80" Height="23" FontSize="8" Grid.Row="2"/>
                <Button x:Name="IDC_OPEN_PALETTE_BUTTON" Content="Open Palette" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Height="23" FontSize="8" Grid.Row="2"/>
                <Button x:Name="IDC_SAVE_PALETTE_BUTTON2" Content="Save Palette" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Height="23" FontSize="8" Grid.Row="2"/>
                <TextBox x:Name="IDC_NAME_SET_EDIT" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Enter Name" VerticalAlignment="Top" Width="100" Height="32" Grid.Row="2"/>
                <Button x:Name="IDC_TEXTURE_FILENAME_BUTTON" Content="Texture Name" Margin="10,10,0,0" Height="25" Width="100" FontSize="10"/>
            </StackPanel>
            <StackPanel x:Name="texPanel3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,615,0,0"  Height="100" Width="200" Grid.Row="2">
                <SwapChainPanel x:Name="swapChainPanel_Scenario5_Tex" Margin="10,0,0,0" Visibility="Visible" Height="100" Width="200">
                </SwapChainPanel>
                <TextBlock x:Name="IDC_D3DMATERIAL_DISPLAY" HorizontalAlignment="Left" Margin="240,-310,0,0" Text="-Open a file by right clicking the image  Choose from .dds, .jpg, .png, .bmp, .targa, gif for all but the video texture. Video Texture must be .mp4" TextWrapping="Wrap" VerticalAlignment="Top" Height="226" Width="226" FocusVisualPrimaryBrush="White" Foreground="Black" Grid.Row="3" SelectionChanged="IDC_D3DMATERIAL_DISPLAY_SelectionChanged" />
            </StackPanel>
        </Grid>
    </GridView>
</Page>
