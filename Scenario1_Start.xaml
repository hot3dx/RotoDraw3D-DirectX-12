<Page
    x:Class="Hot3dxRotoDraw.Scenario1_Start"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hot3dxRotoDraw"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RootGrid" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="600" MinHeight="521"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"  MaxHeight="50"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="HeaderPanel" Margin="0,0,0,0" HorizontalAlignment="Left" Height="600" Width="400" VerticalAlignment="Center" Background="LightGreen">
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap" Text="Settings to Initialize Sound and the 3D World" FontSize="13.333"/>

            <!-- Status Block for providing messages to the user.  Use the
             NotifyUser() method to populate the message -->
            <Border x:Name="ErrorBorder" Background="Red" Grid.Row="3"/>
            <TextBlock x:Name="StatusBlock" Grid.Row="3" Margin="12, 0, 12, 0" Visibility="Visible"/>

            <!-- Always give ComboBoxes and Sliders names that are accessible to a screen reader.
             In this case, reference the labeling TextBlocks to have the accessible names set 
             on the ComboBoxes and Sliders. -->
            <!--StackPanel Height="500"  Grid.Row ="1"-->
            <StackPanel HorizontalAlignment="Left" Height="437" Margin="0,0,0,0" Width="395" RequestedTheme="Default" Background="LightGreen" Grid.Row="1">
                <Button Content="Play" Click="PlayButton_Click" Margin="190,50,0,0" Width="47" VerticalAlignment="Top"/>
                <Button Content="Stop" Click="StopButton_Click" Margin="190,20,0,0" Width="50" VerticalAlignment="Top"/>
                <TextBox x:Name="txtContentProps" Grid.Row="3" HorizontalAlignment="Center" Width="376" Height="50"  Margin="0,10,0,0" TextWrapping="Wrap" FocusVisualPrimaryBrush="#FFBCF5BC" FocusVisualSecondaryBrush="#FFBCF5BC" RequestedTheme="Light" />

                <Button Content="Load" Click="LoadButton_Click" Margin="190,10,0,0" Width="90"/>
                <Image x:Name="SoundFile1" Source="ms-appx:///Assets/musicmono_adpcm.wav" x:Load="True" HorizontalAlignment="Left" Height="75" Margin="180,10,0,0" VerticalAlignment="Top" Width="75"/>

                <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="Speed of Orbit in Seconds" Margin="10,-170,0,0" Width="163" HorizontalAlignment="Left" SelectionChanged="textBlock2_SelectionChanged" Height="22"/>
                <Slider x:Name="RotationSpeedSlider" Width="152" Maximum="20" LargeChange="1" ValueChanged="RotationSpeedSlider_ValueChanged" SmallChange="0.5"
            AutomationProperties.LabeledBy="{Binding ElementName=textBlock2}" Margin="10,-100,0,0" HorizontalAlignment="Left" Height="34"/>

                <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,-290,0,0" TextWrapping="Wrap" Text="Music/Sound Environment" VerticalAlignment="Top"/>
                <ComboBox x:Name="EnvironmentComboBox" Header="Environment Choices" PlaceholderText="Outdoors" HorizontalAlignment="Left"  Margin="10,-260,0,0" Width="161"  IsDropDownOpen="True" SelectionChanged="EnvironmentComboBox_SelectionChanged"
            AutomationProperties.LabeledBy="{Binding ElementName=textBlock1}">
                    <x:String>Small Room</x:String>
                    <x:String>Medium Room</x:String>
                    <x:String>Large Room</x:String>
                    <x:String>Outdoors</x:String>
                </ComboBox>
                <Button Content="Full View" Click="FullViewButton_Click" Margin="190,30,0,0" Width="100"
                        ToolTipService.Placement="Right" ToolTipService.ToolTip="Opens Fullscreen F key to exit" />
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,-70,0,0" TextWrapping="Wrap" Text="Radius of Orbit" VerticalAlignment="Top"/>
                <Slider x:Name="RadiusSlider" HorizontalAlignment="Left" Margin="10,-50,0,0" VerticalAlignment="Top" Width="152" Maximum="10" LargeChange="1" Value="1" ValueChanged="RadiusSlider_ValueChanged" SmallChange="0.1" TickFrequency="1" StepFrequency="0.1"
            AutomationProperties.LabeledBy="{Binding ElementName=textBlock}"/>
                <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="10,-20,0,0" TextWrapping="Wrap" Text="Height of Orbit" VerticalAlignment="Top"/>
                <Slider x:Name="HeightSlider" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="152" Minimum="-10" Maximum="10" LargeChange="1" SmallChange="0.5" ValueChanged="HeightSlider_ValueChanged"
            AutomationProperties.LabeledBy="{Binding ElementName=textBlock3}"/>
                <Button Content="Left Menus" Click="LeftMenusButton_Click" Margin="10,30,0,0" Width="90"
                        ToolTipService.Placement="Right" ToolTipService.ToolTip="Flips GUI to left side" />
                <Button Content="Right Menus" Click="RightMenusButton_Click" Margin="10,10,0,0" Width="90" VerticalAlignment="Top"
                        ToolTipService.Placement="Right" ToolTipService.ToolTip="Flips GUI to right side, Resize should occur before flip" />
                <TextBlock x:Name="SwitchMenuSidesTextBlock" HorizontalAlignment="Left" Margin="120,-66,0,0" TextWrapping="Wrap" Text="Reverse theMenu/Drawing Side by pressing:" Width="111" Height="75"/>

            </StackPanel>
            <StackPanel>
                <TextBlock Text="1" x:Name="text6Block1" />
                <TextBlock Text="2" x:Name="text6Block2" />
                <TextBlock Text="3" x:Name="text6Block3" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
